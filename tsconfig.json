{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2020"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
  }
}
